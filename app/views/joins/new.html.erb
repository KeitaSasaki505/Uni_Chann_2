<h2>イベント参加申込</h2>

<%# <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= form_with model: @event, class: 'registration-main', local: true do |f| %>

  <h3 class='form-header-text'>
    参加フォーム入力
  </h3>
  <div class="field">
    <%= f.label :名前(漢字) %><br />
    <%= f.file_field :name_kanji %><p>※クリックしてファイルをアップロード</p>
  </div>

  <div class="field">
    <%= f.label :名前(カナ) %><br />
    <%= f.text_field :namae_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.text_field :email %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :コメント(空欄でも可：何か要望がございましたらご記入ください) %><br />
    <%= f.text_area :option %>
  </div>

<% end %>